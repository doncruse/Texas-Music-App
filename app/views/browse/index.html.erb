<h1>Something something something</h1>
<h2>Search by city or musical genre</h2>


<% form_tag({ :action => "index"}, :method => :post ) do %>

<%= select_tag("city", options_for_select(@city_options, @city), :include_blank => true, :class => "table_form") %>

<%= select_tag("genre", options_for_select(@genre_options, @genre), :include_blank => true, :class => "table_form") %>

<%= submit_tag "Browse", :id => "submit", :name => "submit", :class => "table_form", :disabled => false %>

<% end %>

<h2>... Or search by band name</h2>

<% form_tag({ :action => "search" }) do %>
	<%= text_field_tag :search_term %>
	<%#= autocomplete_field_tag :search_term, autocomplete_band_name_browse_path %>
	<%= submit_tag "Search", :id => "submit2", :name => "submit2", :class => "table_form" %>
<% end %>

<p></p>

<% if @result %>

<% @result.each do |one_band| %>
	<div style="border: 1px solid #333; padding: 2px 3px; margin-bottom: 10px; background-color: #fffae0;">
		<h3><%= one_band.name %> <% unless @city %>(in <%= one_band.city %>)<% end %></h3>
		<p><%= one_band.genres.map(&:name).sort.join(", ") %></p>
		<% if one_band.contact_info %><p>Contact: <%= one_band.contact_info %></p><% end %>
	</div>
<% end %>

<% end %>